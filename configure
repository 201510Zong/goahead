#!/bin/sh
#
#   configure -- Configure for building on Unix systems
#
#   This simply invokes bit to do the work

if ! type bit >/dev/null 2>&1 ; then
    echo "Install Bit for building. Distributed as part of Ejscript:" >&2
    echo "  http://ejscript.org/downloads/ejs/download.ejs" >&2
    exit 255
fi
bit configure $*
